@page "/dobbelen"
@page "/dobbelen/{aantal:int}"
<h1>Dobbelen</h1>
<h3>We spelen met @Aantal stenen</h3>
<button class="btn btn-primary m-3" @onclick="GooiStenen">Gooi de stenen</button>
<div class="mb-3">
    @if (currentScore != 0)
    {
        foreach (int score in stenen)
        {
            <img src=@($"/images/{score}.png") width="48" />
        }
    }
</div>
<p class="alert alert-info">Jouw score : @currentScore</p>
@code {
     private int currentScore = 0;
     private List<int> stenen = new List<int>();
     [Parameter]
     public int Aantal { get; set; }
     private void GooiStenen()
     {
         currentScore = 0;
         stenen.Clear();
         Random random = new Random();
         for (var index = 0; index < Aantal; index++) {
         var ogen = random.Next(1, 7);
         stenen.Add(ogen);
         currentScore += ogen;
    }
 }
    protected override void OnInitialized()
    {
        base.OnInitialized();
        if (Aantal == 0) Aantal = 2;
    }
}
